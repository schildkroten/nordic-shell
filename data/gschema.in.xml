    </key>
    <key name="no-border-on-floating" type="b">
      <default>false</default>
    </key>
    <key name="gaps-in" type="i">
      <default>5</default>
    </key>
    <key name="gaps-out" type="i">
      <default>20</default>
    </key>
    <key name="float-gaps" type="i">
      <default>0</default>
    </key>
    <key name="gaps-workspaces" type="i">
      <default>0</default>
    </key>
    <key name="col-inactive-border" type="s">
      <default>"0xff444444"</default>
    </key>
    <key name="col-active-border" type="s">
      <default>"0xffffffff"</default>
    </key>
    <key name="col-nogroup-border" type="s">
      <default>"0xffffaaff"</default>
