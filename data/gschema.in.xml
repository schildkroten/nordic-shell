      <default>false</default>
    </key>
    <key name="dim-strength" type="d">
      <default>0.5</default>
      <range min="0.0" max="1.0" />
    </key>
    <key name="dim-special" type="d">
      <default>0.2</default>
      <range min="0.0" max="1.0" />
    </key>
    <key name="dim-around" type="d">
      <default>0.4</default>
      <range min="0.0" max="1.0" />
    </key>
    <key name="screen-shader" type="s">
      <default>"[[EMPTY]]"</default>
    </key>
    <key name="border-part-of-window" type="b">
      <default>true</default>
    </key>
  </schema>
</schemalist>
